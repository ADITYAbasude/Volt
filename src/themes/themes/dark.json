{
  "colors": {
    "primary": "#007ACC",
    "secondary": "#1e1e1e",
    "editor.background": "#1e1e1e",
    "editor.foreground": "#d4d4d4",
    "editor.lineNumber.background": "#1e1e1e",
    "editor.lineNumber.foreground": "#858585",
    "editor.cursor": "#fff",
    "editor.indent.guide": "#404040",
    "editor.selectionBackground": "#264f78",
    "editor.selectionForeground": "#ffffff",
    "editor.currentLine": "#2a2d2e",
    "editor.matchingBrace": "#ffd700",

    "statusBar.background": "#007acc",
    "statusBar.foreground": "#ffffff",
    "statusBar.border": "#007acc",

    "menu.background": "#252526",
    "menu.foreground": "#cccccc",
    "menu.selectionBackground": "#04395e",
    "menu.selectionForeground": "#ffffff",
    "menu.border": "#454545",

    "explorer.background": "#252526",
    "explorer.foreground": "#cccccc",
    "explorer.border": "#FFFFFF",
    "explorer.selectionBackground": "#37373d",
    "explorer.selectionForeground": "#ffffff",
    "explorer.hoverBackground": "#2a2d2e",

    "syntax.comment": "#6a9955",
    "syntax.string": "#ce9178",
    "syntax.number": "#b5cea8",
    "syntax.keyword": "#569cd6",
    "syntax.class": "#4ec9b0",
    "syntax.function": "#dcdcaa",
    "syntax.variable": "#9cdcfe",
    "syntax.operator": "#d4d4d4",
    "syntax.type": "#4ec9b0",
    "syntax.preprocessor": "#569cd6",
    "syntax.escape": "#d7ba7d",
    "syntax.regex": "#d16969",
    "syntax.identifier": "#9cdcfe",

    "scrollbar.background": "#00000000",
    "scrollbar.handle": "#464647",
    "scrollbar.handleHover": "#5a5a5c",
    "scrollbar.handlePressed": "#6c6c6e",
    "scrollbar.corner": "#2d2d30"
  },
  "fonts": {
    "editor": {
      "family": "Consolas",
      "size": 10,
      "weight": "normal"
    },
    "menu": {
      "family": "Segoe UI",
      "size": 9,
      "weight": "normal"
    },
    "statusBar": {
      "family": "Segoe UI",
      "size": 9,
      "weight": "normal"
    },
    "explorer": {
      "family": "Segoe UI",
      "size": 9,
      "weight": "normal"
    }
  },
  "dimensions": {
    "editor.tabWidth": 4,
    "editor.margins": [0, 0, 0, 0],
    "editor.lineHeight": 20,
    "editor.letterSpacing": 0,

    "statusBar.height": 18,
    "statusBar.padding": [2, 0, 2, 0],

    "menu.itemHeight": 24,
    "menu.padding": [8, 4, 8, 4],
    "menu.separatorHeight": 1,

    "scrollbar.width": 14,
    "scrollbar.handleRadius": 6,
    "scrollbar.handleMargin": 2,
    "scrollbar.minimumHandleLength": 20
  },
  "styles": {
    "scrollbar": {
      "smoothScrolling": true,
      "scrollSensitivity": 3,
      "animationDuration": 150,
      "verticalPolicy": "asNeeded",
      "horizontalPolicy": "asNeeded",
      "autoHide": true,
      "autoHideDelay": 1000
    }
  }
}
